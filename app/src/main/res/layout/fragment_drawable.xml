<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:title="@string/title_drawable" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <soup.animation.sample.drawable.AnimatedImageView
            android:id="@+id/battery"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:src="@drawable/ic_battery_anim"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <soup.animation.sample.drawable.AnimatedImageView
            android:id="@+id/battery_charging"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:src="@drawable/ic_battery_charging_anim"
            app:layout_constraintStart_toEndOf="@id/battery"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/rippleNormal"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:background="?selectableItemBackground"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/battery" />

        <ImageView
            android:id="@+id/rippleBorderless"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:background="?selectableItemBackgroundBorderless"
            app:layout_constraintStart_toEndOf="@id/rippleNormal"
            app:layout_constraintTop_toBottomOf="@id/battery" />

        <!-- TODO: -->
        <ImageView
            android:id="@+id/rippleWrong"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:background="?selectableItemBackgroundBorderless"
            app:layout_constraintStart_toEndOf="@id/rippleBorderless"
            app:layout_constraintTop_toBottomOf="@id/battery" />

        <!-- TODO: -->
        <ImageView
            android:id="@+id/rippleCustom"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:background="?selectableItemBackgroundBorderless"
            app:layout_constraintStart_toEndOf="@id/rippleWrong"
            app:layout_constraintTop_toBottomOf="@id/battery" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
